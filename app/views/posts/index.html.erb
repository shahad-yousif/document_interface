<div dir="auto">  
  <p id="notice"><%= notice %></p>

  <h1><%= t '.header' %></h1>
  <head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
  </head>
  <body> 
    <table class="table">
      <thead>
        <tr>
          <th><%= t'.title'%></th>
          <th><%= t'.body'%></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= sanitize post.body %></td>
            <td><%= link_to t('.show'), post %></td>
            <td><%= link_to t('.edit'), edit_post_path(post) %></td>
            <td><%= link_to t('.destroy'), post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to t('.new'), new_post_path %>
  </body>
</div>  